@model UniTrak.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Courses</h2>

<br />
@if (@Model.Courses.Count == 0)
{
    <p>There are no available courses, yet !!!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th class="bg-secondary">Title</th>
            <th class="bg-secondary">Category</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var course in @Model.Courses)
        {
            <tr>
                <td>@Html.ActionLink(@course.Title, "Details", new{ id = course.Id}, null )</td>
                <td>@course.CategoryType.Name</td>
            </tr>
        }
        </tbody>
    </table>
}